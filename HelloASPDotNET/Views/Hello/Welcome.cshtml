@{
}

@if (ViewBag.person == null || ViewBag.person == "")
{
    <h1>Welcome, World!</h1>
}
else 
{
    <h1>Welcome, @ViewBag.person!</h1>
}

<ol>
    @foreach (KeyValuePair<string, double> veggie in ViewBag.vegsByPrice) 
    {
        <li>
            <strong>@veggie.Key</strong>
            ...@veggie.Value<br />
        </li>
    }
</ol> 